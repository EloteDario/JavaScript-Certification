function steamrollArray (arr, n=20) {
    if (n === 0) {
        return arr
    }

    const arrReturned = []
    
    for (let i=0; i < arr.length; i++) {
        if (Array.isArray(arr[i])) {
            
            arrReturned.push(...steamrollArray(arr[i], n - 1));
        } else {arrReturned.push(arr[i])}

        
    }
    return arrReturned
}; 
